---
import LayoutSeo from '@layouts/LayoutSeo.astro';
import { getCollection } from 'astro:content';
import { getBlogJsonLd } from '@utils/jsonld';
import BlogPost from '@components/sections/BlogPost.astro';
import AllPostsSection from '@components/sections/AllPostsSection';
import { Formatter } from '@utils/formatter.ts';

const tituloPagina = 'Blog - IQEngi';
const description = 'Artículos técnicos, guías especializadas y análisis profundos sobre ingeniería y tecnología.';

// Ordenar posts por fecha descendente
const allPosts = (await getCollection('posts')).sort(
    (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Post destacado (el más reciente)
const featuredPost = allPosts[0];

// Posts recientes para la sección inicial (máximo 3 posts, excluyendo el destacado)
const recentPosts = allPosts.slice(1, 4);

// Todos los posts para la sección paginada (convertidos a formato serializable)
const allPostsData = allPosts.map(post => ({
    slug: post.data.slug,
    title: post.data.title,
    description: post.data.description,
    image: post.data.image || null,
    date: post.data.date.toISOString(),
    author: post.data.author || null,
    tags: post.data.tags || []
}));

const blogPostsJsonLd = getBlogJsonLd();
---

<LayoutSeo
    tituloPagina={tituloPagina}
    description={description}
    seoJsonLd={blogPostsJsonLd}
    fluid={true}
>
    <!-- Hero Section -->
    <div class="relative bg-base-200 py-16 md:py-24 overflow-hidden">
        <div class="absolute inset-0 bg-grid-slate-900/[0.04] bg-[bottom_1px_center] text-[--color-border] [mask-image:linear-gradient(to_bottom,transparent,black)]"></div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10">
            <span class="inline-block py-1 px-3 rounded-full bg-primary/10 text-primary text-sm font-semibold mb-4 border border-primary/20">
                Nuestro Blog
            </span>
            <h1 class="text-4xl md:text-6xl font-extrabold text-base-content tracking-tight mb-6">
                Conocimiento para <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Ingenieros</span>
            </h1>
            <p class="text-xl md:text-2xl text-base-content/70 max-w-2xl mx-auto leading-relaxed">
                Descubre guías técnicas, tutoriales avanzados y las últimas tendencias en ingeniería y tecnología.
            </p>
        </div>
        
        <!-- Decoration elements -->
        <div class="absolute top-1/2 left-0 -translate-y-1/2 w-64 h-64 bg-primary/10 rounded-full blur-3xl -z-10"></div>
        <div class="absolute top-1/2 right-0 -translate-y-1/2 w-64 h-64 bg-secondary/10 rounded-full blur-3xl -z-10"></div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 -mt-10 md:-mt-16 relative z-20">
        
        <!-- Featured Post Section -->
        {featuredPost && (
            <div class="mb-16">
                <article class="card lg:card-side bg-base-100 shadow-xl overflow-hidden border border-base-200 group hover:shadow-2xl transition-all duration-300">
                    <figure class="lg:w-7/12 relative overflow-hidden">
                        <!-- Contenedor con ratio fijo para la imagen -->
                        <div class="w-full h-full min-h-[350px] lg:min-h-[500px]">
                            <img 
                                src={featuredPost.data.image || '/images/placeholder-image.png'} 
                                alt={featuredPost.data.title}
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                            />
                        </div>
                        <div class="absolute inset-0 bg-gradient-to-t from-base-100/90 via-transparent lg:bg-gradient-to-r lg:from-transparent lg:via-transparent lg:to-base-100/95"></div>
                        <div class="absolute top-4 left-4">
                            <span class="badge badge-primary badge-lg shadow-lg font-bold">Destacado</span>
                        </div>
                    </figure>
                    <div class="card-body lg:w-5/12 justify-center p-8 lg:p-12">
                        <div class="flex items-center gap-2 text-sm font-medium text-primary mb-2">
                             {featuredPost.data.tags && featuredPost.data.tags[0] && (
                                <span class="uppercase tracking-wide">#{featuredPost.data.tags[0]}</span>
                            )}
                            <span class="w-1 h-1 rounded-full bg-base-content/30"></span>
                            <time datetime={featuredPost.data.date.toISOString()}>{Formatter.formatDate(featuredPost.data.date)}</time>
                        </div>
                        <h2 class="card-title text-3xl md:text-4xl font-bold mb-4 group-hover:text-primary transition-colors leading-tight">
                            <a href={`/blog/${featuredPost.data.slug}`}>
                                {featuredPost.data.title}
                            </a>
                        </h2>
                        <p class="text-base-content/70 text-lg mb-6 line-clamp-3">
                            {featuredPost.data.description}
                        </p>
                        
                        <div class="flex items-center gap-4 mt-auto">
                            <a 
                                href={`/blog/${featuredPost.data.slug}`} 
                                class="btn btn-primary h-10 min-h-[40px] px-6 text-white shadow-md shadow-primary/20 hover:bg-[var(--color-btn-hover)] hover:border-[var(--color-btn-hover)] hover:shadow-lg hover:shadow-[var(--color-btn-hover)]/40 hover:scale-[1.03] rounded-xl transition-all duration-300"
                            >
                                Leer artículo completo
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </article>
            </div>
        )}

        <!-- Sección Recientes Publicaciones (máximo 3 posts) -->
        {recentPosts.length > 0 && (
            <>
                <div class="flex items-center justify-between mb-8 pb-4 border-b border-base-200">
                    <h3 class="text-2xl font-bold">Recientes Publicaciones</h3>
                </div>

                <!-- Grid de posts recientes -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {recentPosts.map((post) => <BlogPost post={post} />)}
                </div>
            </>
        )}

        {allPosts.length === 0 && (
            <div class="text-center py-20">
                <div class="mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold mb-2">No hay artículos publicados aún</h3>
                <p class="text-base-content/60">Estamos preparando contenido increíble para ti. Vuelve pronto.</p>
            </div>
        )}

        <!-- Sección Todos los Artículos con paginación (client:load para interactividad) -->
        <AllPostsSection client:load posts={allPostsData} postsPerPage={6} />

        <!-- Newsletter Section -->
        <section class="mt-24 mb-12 relative overflow-hidden rounded-3xl bg-base-900 text-white">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/90 to-secondary/90 z-0"></div>
             <div class="absolute inset-0 bg-[url('/images/pattern.svg')] opacity-10 z-0"></div>
            <div class="relative z-10 p-12 md:p-16 text-center max-w-3xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">Suscríbete a nuestro Newsletter</h2>
                <p class="text-lg text-white/90 mb-8">
                    Recibe contenido exclusivo, tips de ingeniería, ofertas especiales y acceso anticipado a nuevos cursos directamente en tu bandeja de entrada.
                </p>
                <form class="flex flex-col sm:flex-row gap-3 max-w-lg mx-auto">
                    <input type="email" placeholder="tucorreo@ejemplo.com" class="input input-lg w-full bg-white/10 border-white/20 text-white placeholder-white/60 focus:bg-white/20 focus:border-white focus:outline-none backdrop-blur-sm" required />
                    <button type="submit" class="btn btn-lg bg-white text-primary border-none hover:bg-white hover:scale-105 hover:shadow-xl transition-all duration-300 font-bold shadow-md">
                        Suscribirme
                    </button>
                </form>
                <p class="text-xs text-white/60 mt-4">No enviamos spam. Puedes darte de baja en cualquier momento.</p>
            </div>
        </section>
    </div>
</LayoutSeo>
