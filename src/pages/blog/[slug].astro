---
import type { GetStaticPaths } from 'astro';
import LayoutSeo from '@layouts/LayoutSeo.astro';
import { getCollection, type CollectionEntry, render } from 'astro:content';
import { getPostJsonLd } from '@utils/jsonld';

export const prerender = true;

// Generar rutas estáticas
export const getStaticPaths: GetStaticPaths = async () => {
    const posts = await getCollection('posts');
    return posts.map((post) => ({
        params: {
            slug: post.data.slug || post.id,
        },
        props: { post },
    }));
};

interface Props {
    post: CollectionEntry<'posts'>;
}

const { post } = Astro.props;

// Renderizar el contenido del post
const { Content, headings, remarkPluginFrontmatter } = await render(post);

// Generar JSON-LD para SEO
const postJsonLd = getPostJsonLd(post);

// Obtener posts relacionados (por tags coincidentes)
const allPosts = await getCollection('posts');
const relatedPosts = allPosts
    .filter(p => p.data.slug !== post.data.slug) // Excluir el post actual
    .map(p => ({
        ...p,
        matchingTags: p.data.tags?.filter(tag => post.data.tags?.includes(tag)).length || 0
    }))
    .sort((a, b) => b.matchingTags - a.matchingTags) // Ordenar por tags coincidentes
    .slice(0, 3); // Tomar solo 3

// Formatear fecha
const formattedDate = new Date(post.data.date).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
});

// Obtener iniciales del autor para avatar
const authorInitials = post.data.author
    ? post.data.author.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2)
    : 'IQ';

// URL actual para compartir
const currentUrl = Astro.url.href;
const encodedUrl = encodeURIComponent(currentUrl);
const encodedTitle = encodeURIComponent(post.data.title);
---

<LayoutSeo tituloPagina={post.data.title} seoJsonLd={postJsonLd}>
    <!-- Barra de progreso de lectura -->
    <div id="reading-progress" class="fixed top-0 left-0 h-1 bg-gradient-to-r from-primary to-secondary z-50 transition-all duration-150" style="width: 0%;"></div>

    <!-- Hero Section con imagen -->
    <header class="relative w-full overflow-hidden bg-base-200">
        <!-- Imagen de fondo -->
        {post.data.image && (
            <div class="absolute inset-0">
                <img 
                    src={post.data.image} 
                    alt={post.data.title}
                    class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-base-100 via-base-100/80 to-base-100/40"></div>
            </div>
        )}
        
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
            <!-- Breadcrumbs -->
            <nav class="mb-6" aria-label="Breadcrumb">
                <ol class="flex items-center gap-2 text-sm">
                    <li>
                        <a href="/" class="text-base-content/60 hover:text-primary transition-colors">Inicio</a>
                    </li>
                    <li class="text-base-content/40">/</li>
                    <li>
                        <a href="/blog" class="text-base-content/60 hover:text-primary transition-colors">Blog</a>
                    </li>
                    {post.data.tags && post.data.tags[0] && (
                        <>
                            <li class="text-base-content/40">/</li>
                            <li>
                                <span class="text-primary font-medium">#{post.data.tags[0]}</span>
                            </li>
                        </>
                    )}
                </ol>
            </nav>

            <!-- Tags -->
            {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mb-4">
                    {post.data.tags.slice(0, 4).map((tag) => (
                        <span class="badge badge-primary badge-outline text-xs font-medium">
                            #{tag}
                        </span>
                    ))}
                </div>
            )}

            <!-- Título -->
            <h1 class="text-3xl md:text-5xl lg:text-6xl font-extrabold text-base-content leading-tight mb-6 max-w-4xl">
                {post.data.title}
            </h1>

            <!-- Descripción -->
            <p class="text-xl md:text-2xl text-base-content/70 leading-relaxed mb-8 max-w-3xl">
                {post.data.description}
            </p>

            <!-- Metadatos del post -->
            <div class="flex flex-wrap items-center gap-6 text-base-content/70">
                <!-- Autor con avatar -->
                {post.data.author && (
                    <div class="flex items-center gap-3">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white font-bold text-sm shadow-lg">
                            {authorInitials}
                        </div>
                        <div>
                            <span class="block font-semibold text-base-content">{post.data.author}</span>
                            <span class="text-sm">Autor</span>
                        </div>
                    </div>
                )}

                <!-- Separador -->
                <div class="hidden sm:block w-px h-10 bg-base-content/20"></div>

                <!-- Fecha -->
                <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <time datetime={post.data.date.toISOString()} class="font-medium">{formattedDate}</time>
                </div>

                <!-- Tiempo de lectura -->
                {remarkPluginFrontmatter.readingTime && (
                    <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span class="font-medium">{remarkPluginFrontmatter.readingTime}</span>
                    </div>
                )}
            </div>
        </div>
    </header>

    <!-- Contenido principal -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-25 gap-8">
            
            <!-- Sidebar izquierda: Tabla de contenidos -->
