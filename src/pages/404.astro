---
import Layout404 from '@layouts/Layout404.astro';
---

<Layout404 title="404 Not Found">
    <!-- Contenedor principal centrado -->
    <div class="container mx-auto px-4 flex justify-center">
        <div class="w-full max-w-2xl text-center">
            <!-- Título del error -->
            <h1 class="text-black text-9xl font-black">404</h1>

            <!-- Contenedor de la imagen -->
            <div class="flex justify-center">
                <img
                    src="https://res.cloudinary.com/dybzno8pq/image/upload/v1741879230/inge-se-desplomo_qyuxup.png"
                    alt="Página caída"
                    class="w-full max-w-md md:max-w-lg lg:max-w-xl"
                />
            </div>

            <!-- Sección de contenido debajo de la imagen -->
            <div class="mt-4">
                <!-- Mensaje de error -->
                <h3 class="text-5xl font-bold">
                    Esta página no se cayó, se desplomó
                </h3>
                <p class="text-lg mt-4">
                    Lo siento, la página que buscas no existe.
                </p>

                <!-- Botón para volver a la página de inicio -->
                <a
                    href="/"
                    class="mt-6 inline-block px-6 py-3 bg-indigo-600 text-white rounded-md hover:scale-105 focus-visible:outline-indigo-600 hover:bg-indigo-500 transition-transform"
                >
                    Volver a Inicio
                </a>
            </div>
        </div>
    </div>
</Layout404>
