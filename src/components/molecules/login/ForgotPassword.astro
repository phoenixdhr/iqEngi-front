<!-- Contenedor principal del modal de olvide contraseña, oculto por defecto (clase "hidden") --><!-- Título del modal que indica la acción a realizar -->
<div class="flex justify-center items-center gap-2 mb-4">
    <h2 class="text-xl font-semibold text-center">Revisa tu email</h2>
    <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
        class="w-6 h-6"
    >
        <path
            d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z"
        ></path>
        <path
            d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z"
        ></path>
    </svg>
</div>

<p class="text-base mb-4 text-center" style="color: var(--color-text-muted);">
    Te enviamos un correo a <span
        id="spanEmailForgotPassword"
        class="font-semibold"
        style="color: var(--color-text);"></span>
    con un enlace para crear una nueva contraseña. Si no te ha llegado en unos minutos,
    revisa la carpeta de spam.
</p>
<!-- Contenedor del mensaje  -->
<div
    id="astro-login-form-google"
    class="relative flex flex-col justify-center mt-8"
>
    <!-- Botón Cerrar -->
    <button
        id="btnCerrarForgotPassword"
        type="button"
        class="w-full h-12 text-white font-medium text-base hover:scale-105 transition-transform rounded-full focus:ring-4"
        style="background: var(--gradient-button-primary);"
    >
        Cerrar
    </button>

    <hr
        class="w-full border-t my-6"
        style="border-color: var(--color-border);"
    />

    <span
        class="text-base mb-2.5 text-center"
        style="color: var(--color-text-muted);"
    >
        Si necesitas ayuda comunícate con nuestro equipo de soporte a <span
            class="font-semibold"
            style="color: var(--color-text);">team@iqengi.com.</span
        >
    </span>
</div>

<script>
    import {
        showElement,
        hideElement,
        clearFields,
    } from '@services/closeOpenLogin';

    function closeModal_forgotPassword() {
        hideElement('login-modal');
        showElement('loginModalDiv');
        hideElement('loginCreatePasswordDiv');
        hideElement('loginGoogleDiv');
        hideElement('loginPasswordDiv');
        hideElement('forgotPasswordDiv');
        hideElement('loginCreatePasswordNameDiv');
        hideElement('btnBack');

        clearFields([
            'emailInput',
            'spanEmail',
            'emailGoogleSpan',
            'passwordInput',
            'confirmPasswordInput',
            'passwordLoginInput',
            'firstNameInput',
            'lastNameInput',
        ]);
    }

    const btnCerrarForgotPassword = document.getElementById(
        'btnCerrarForgotPassword',
    );
    btnCerrarForgotPassword &&
        btnCerrarForgotPassword.addEventListener('click', () => {
            closeModal_forgotPassword();
        });
</script>
