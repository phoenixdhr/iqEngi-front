<div
    id="astro-login-modal"
    class="hidden fixed inset-0 z-50 bg-[rgba(0,0,0,0.85)] bg-opacity-80 flex items-center justify-center"
>
    <div
        id="astro-login-box"
        class="bg-gray-100 text-gray-900 p-8 rounded-3xl w-full max-w-md h-[500px] relative shadow-2xl flex flex-col justify-center"
    >
        <button
            class="absolute top-4 right-4 text-gray-600 hover:text-gray-800 text-xl"
            onclick="document.getElementById('astro-login-modal').classList.add('hidden')"
        >
            ✖
        </button>
        <h2 class="text-xl font-semibold mb-6 text-center">
            Ingresa o crea una cuenta con:
        </h2>
        <form class="space-y-6">
            <input
                type="email"
                placeholder="Correo electrónico"
                required
                class="w-full h-12 px-4 bg-white border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-400 rounded-full text-gray-900"
            />
            <button
                type="submit"
                class="w-full h-12 text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 font-medium text-sm hover:scale-105 transition-transform rounded-full"
            >
                Continuar →
            </button>
            <div class="text-center text-gray-500">o</div>
            <button
                type="button"
                class="w-full h-12 bg-white text-gray-800 border border-gray-300 hover:bg-gray-100 transition rounded-full flex items-center justify-center gap-2"
            >
                <svg
                    viewBox="0 0 48 48"
                    width="20"
                    height="20"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                >
                    <g>
                        <path
                            fill="#FBBC05"
                            d="M9.827 24c0-1.524.253-2.985.705-4.356L2.623 13.604A23.74 23.74 0 000.214 24c0 3.737.868 7.261 2.407 10.388l7.905-6.051A14.125 14.125 0 019.827 24z"
                        ></path>
                        <path
                            fill="#EB4335"
                            d="M23.714 10.133c3.311 0 6.302 1.173 8.652 3.093L39.202 6.4C35.036 2.773 29.695.533 23.714.533c-9.287 0-17.269 5.311-21.09 13.071l7.909 6.04c1.823-5.532 7.017-9.51 13.181-9.51z"
                        ></path>
                        <path
                            fill="#34A853"
                            d="M23.714 37.867c-6.164 0-11.359-3.979-13.181-9.51l-7.909 6.038c3.822 7.761 11.804 13.072 21.09 13.072 5.732 0 11.205-2.035 15.312-5.848l-7.507-5.804c-2.118 1.335-4.785 2.053-7.805 2.053z"
                        ></path>
                        <path
                            fill="#4285F4"
                            d="M46.145 24c0-1.387-.213-2.88-.534-4.267H23.714v9.067h12.605c-.63 3.091-2.346 5.467-4.8 7.014l7.508 5.804C43.34 37.614 46.145 31.649 46.145 24z"
                        ></path>
                    </g>
                </svg>
                <span>Con Google</span>
            </button>
        </form>
    </div>
</div>

<script>
    window.addEventListener('open-login-modal', () => {
        document
            .getElementById('astro-login-modal')
            ?.classList.remove('hidden');
    });
</script>
