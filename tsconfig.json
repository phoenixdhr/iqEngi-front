{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["./src/components/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@pages/*": ["./src/pages/*"],
            "@services/*": ["./src/services/*"],

            "@styles/*": ["./src/styles/*"],
            "@graphql-astro/*": ["./src/graphql-astro/*"],
            "@utils/*": ["./src/utils/*"],
            "@const/*": ["./src/const/*"],
            "@assets/*": ["./src/assets/*"]
        },
        "jsx": "react-jsx",
        "jsxImportSource": "react"
    }
}
